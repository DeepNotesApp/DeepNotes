{
  "extends": "tsconfig/base.json",

  "compilerOptions": {
    "types": ["vitest/globals"],

    "baseUrl": ".",

    "rootDir": "src",
    "outDir": "dist",

    "paths": {
      "src/*": ["src/*"],

      "@stdlib/*": ["../../../packages/@stdlib/*/src"]
    }
  },

  "references": [{ "path": "../../../packages/@stdlib/misc/tsconfig.json" }],

  "include": ["*.ts", "src/**/*.ts"],

  "tsc-alias": {
    "replacers": {
      "base-url": {
        "enabled": false
      }
    }
  }
}
